{
  "compilerOptions": {
    "allowJs": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "pretty": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noStrictGenericChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.asynciterable"
    ],
    "jsx": "React",
    "typeRoots": [
      "node_modules/@types",
      "./src/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules",
    "dist"
  ]
}
